<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="?android:attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/linear" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginRight="5dp" android:layout_marginBottom="0dp">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_vehicule" android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="3dp" android:paddingBottom="3dp" android:layout_width="90dp" android:layout_height="50dp" android:scaleType="centerInside" android:layout_weight="1"/>
            <ProgressBar android:id="@+id/progressBar" android:layout_width="15dp" android:layout_height="15dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyle"/>
        </RelativeLayout>
        <TextView android:textSize="12dp" android:textStyle="bold" android:gravity="center" android:layout_gravity="center" android:id="@+id/name_vehicule" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mini" android:layout_alignParentRight="true"/>
        <TextView android:textSize="10dp" android:gravity="center" android:layout_gravity="center" android:id="@+id/duree_requete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10 mins" android:layout_alignParentRight="true"/>
    </LinearLayout>
</FrameLayout>
