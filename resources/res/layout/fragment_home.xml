<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/layout_main" android:layout_width="match_parent" android:layout_height="match_parent">
        <fragment android:name="com.google.android.gms.maps.SupportMapFragment" android:id="@+id/map" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@drawable/custom_layout_destination" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:elevation="5dp">
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="45dp">
            <fragment android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" android:id="@+id/autocomplete_fragment_depart" android:layout_width="match_parent" android:layout_height="50dp" android:tint="@color/colorYellowDark" android:layout_toStartOf="@+id/my_location"/>
            <ImageView android:id="@+id/my_location" android:background="?android:attr/selectableItemBackground" android:padding="12dp" android:visibility="visible" android:layout_width="40dp" android:layout_height="match_parent" android:layout_marginTop="0dp" android:tint="@color/grisGooglePlay" android:layout_centerInParent="true" android:layout_toStartOf="@+id/choose_my_location" app:srcCompat="@drawable/ic_my_location"/>
            <ImageView android:id="@+id/choose_my_location" android:background="?android:attr/selectableItemBackground" android:padding="12dp" android:visibility="visible" android:layout_width="40dp" android:layout_height="match_parent" android:layout_marginTop="0dp" android:tint="@color/grisGooglePlay" android:layout_alignParentRight="true" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_pin_2"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="45dp">
            <fragment android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" android:id="@+id/autocomplete_fragment_arrivee" android:layout_width="match_parent" android:layout_height="50dp" android:tint="@color/colorYellowDark" android:layout_toStartOf="@+id/choose_my_location_destination"/>
            <ImageView android:id="@+id/choose_my_location_destination" android:background="?android:attr/selectableItemBackground" android:padding="12dp" android:visibility="visible" android:layout_width="40dp" android:layout_height="match_parent" android:layout_marginTop="0dp" android:tint="@color/colorYellowDark" android:layout_alignParentRight="true" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_pin_2"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="center" android:id="@+id/btn_my_request" android:background="@drawable/custom_button_my_request" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="30dp" android:layout_alignParentBottom="true" android:elevation="2dp" app:srcCompat="@drawable/ic_navigator"/>
    <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true">
        <TextView android:textColor="@color/colorLogoBlack" android:gravity="center" android:layout_gravity="center" android:id="@+id/commander" android:background="@drawable/custom_button" android:paddingLeft="35dp" android:paddingTop="5dp" android:paddingRight="35dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginRight="5dp" android:text="@string/book" android:cursorVisible="false" android:layout_weight="1" android:layout_centerHorizontal="true"/>
        <TextView android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/reserver" android:background="@drawable/custom_button_second" android:paddingLeft="35dp" android:paddingTop="5dp" android:paddingRight="35dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="5dp" android:text="@string/cancel" android:layout_weight="1" android:layout_alignParentRight="true"/>
    </LinearLayout>
</RelativeLayout>
